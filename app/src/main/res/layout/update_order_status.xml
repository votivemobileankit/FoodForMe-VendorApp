<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <com.foodforme.vendore.customwidget.CustomTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Status"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@android:color/black"
       app:fontAssetName="@string/font_regular"/>

   <RelativeLayout
       android:id="@+id/new_order"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginEnd="10dp"
       android:layout_marginStart="10dp"
       android:fitsSystemWindows="true"
       android:orientation="horizontal"
       android:clickable="false">

       <com.foodforme.vendore.customwidget.CustomTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:text="@string/neworder"
           app:fontAssetName="@string/font_regular"
           android:textSize="@dimen/_12sdp"
           android:textColor="@color/black"
           android:layout_centerVertical="true"
           />

       <ImageView
           android:id="@+id/new_order_unselect"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="@dimen/_10sdp"
           android:background="@drawable/unselect"
           android:layout_centerVertical="true"
           android:layout_marginEnd="@dimen/_10sdp" />
       <ImageView
           android:id="@+id/new_order_select"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:visibility="gone"
           android:background="@drawable/select"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="@dimen/_10sdp"
           android:layout_centerVertical="true"
           android:layout_marginEnd="@dimen/_10sdp" />




   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:id="@+id/order_conf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:fitsSystemWindows="true"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:clickable="false">
        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/confirm_order"
            app:fontAssetName="@string/font_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/order_conf_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/unselect"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/order_conf_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:background="@drawable/select"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:id="@+id/order_ready"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:clickable="false">
        <com.foodforme.vendore.customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ready_order"
            app:fontAssetName="@string/font_regular"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/order_ready_unselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/unselect"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp" />
        <ImageView
            android:id="@+id/order_ready_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/select"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp" />



    </RelativeLayout>


</LinearLayout>